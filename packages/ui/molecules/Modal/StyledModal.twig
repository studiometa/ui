{% extends '@ui/molecules/Modal/Modal.twig' %}

{% block open %}
  {% include '@ui/atoms/Button/StyledButton.twig' with {
    label: 'Open',
    attr: { data_ref: 'open[]' }
  } %}
{% endblock %}

{% block close %}
  <div class="absolute top-0 right-0 m-2">
    {% include '@ui/atoms/Button/StyledButton.twig' with {
      label: 'Close',
      attr: { data_ref: 'close[]' }
    } %}
  </div>
{% endblock %}
