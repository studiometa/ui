{% set attributes = merge_html_attributes(
	attr ?? null,
	{},
	{
		class: 'relative',
	}
) %}

{% set input_attributes = merge_html_attributes(
	input_attr ?? null,
	{},
	{
		type: 'radio',
		class: 'peer sr-only'
	}
) %}

<label {{ html_attributes(attributes) }}>
	<input {{ html_attributes(input_attributes) }} />
	<span
		class="absolute -inset-y-1 inset-x-0 block rounded bg-blue-300 dark:bg-blue-800 bg-opacity-0 dark:bg-opacity-0 peer-checked:bg-opacity-100 peer-focus:ring ring-blue-500 dark:ring-blue-600"
	></span>
	<span class="relative inline-block px-2 peer-checked:text-blue-900 dark:peer-checked:text-white">
		{% block lable %}
			{{ label }}
		{% endblock %}
	</span>
</label>
