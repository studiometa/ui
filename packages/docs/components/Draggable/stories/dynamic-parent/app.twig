<div class="flex gap-10 items-center justify-center min-h-screen p-10 overflow-hidden">
  <div data-component="Draggable"
    data-option-fit-bounds
    class="relative grid justify-center items-center w-32 h-32 bg-gray-100 dark:bg-white dark:bg-opacity-20 rounded">
    <div data-ref="target"
      class="z-10 absolute flex self-center justify-self-center items-center justify-center w-24 h-24 rounded-full text-white dark:text-black bg-black dark:bg-white cursor-grab active:cursor-grabbing select-none">
      Drag me
    </div>
  </div>
  {% for color in ['red', 'green', 'blue'] %}
    <div data-component="Action"
      data-option-on:click="Action -> target.$el.classList.toggle('ring', target.$el === event.target)"
      class="flex items-center justify-center w-32 h-32 bg-{{ color }}-400 rounded ring-{{ color }}-600">Click me</div>
  {% endfor %}
</div>
