{%- set content -%}
  {% verbatim %}
  <div id="target">
    <p>
      {{ 'now'|date('F j, Y H:i:s') }}
    </p>
  </div>
  {% endverbatim %}
{%- endset -%}

<div class="grid gap-8 p-8">
  <div class="flex gap-4">
    {% for mode in ['replace', 'append', 'prepend', 'morph'] %}
    {{
      include(
        '@ui/Button/StyledButton.twig',
        {
          label: mode|capitalize,
          href: twig_toolkit_url('/api/').withQueryParameter('content', content),
          attr: {
            data_component: 'Fetch',
            data_option_mode: mode,
          }
        }
      )
    }}
    {% endfor %}
  </div>
  <div class="grid gap-8">
    <div id="target">
      <p>
        {{ 'now'|date('F j, Y H:i:s') }}
      </p>
    </div>
  </div>
</div>
