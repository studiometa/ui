{% set section_length = 3 %}

<div data-component="AnchorNav" class="flex items-start relative">
  <nav class="bg-blue-200 p-2 w-1/3 sticky flex flex-col top-4">
    <ul>
      {% for item in 1..section_length %}
        <li class="my-4">
          <a href="#item-{{ loop.index }}"
            data-component="AnchorNavLink"
            data-option-enter-to="bg-pink-200"
            data-option-enter-active="transition-all duration-500 ease-out-expo"
            data-option-enter-keep
            class="py-2 px-2 bg-blue-200">
            item-{{ loop.index }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
  <div class="w-2/3">
    {% for item in 1..section_length %}
      <section class="relative bg-purple-200 h-[300px]">
        <div data-component="AnchorNavTarget"
        data-option-intersection-observer='{
          "threshold": 0.5,
          "rootMargin": "0% 0px -30% 0px"
        }'
        id="item-{{ loop.index }}"
        class="bg-pink-200 h-[150px]">
          Item-{{ loop.index }}
        </div>
      </section>
    {% endfor %}
  </div>
</div>

<div class="h-screen"></div>
