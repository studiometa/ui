<style>
  a { color: inherit; text-decoration: none; }
  a:focus { z-index: 1; position: relative; }
  ul { list-style-type: none; padding: 0; margin: 0; }
</style>

<nav>
  <ul class="relative w-full flex items-center justify-around">
    {% for item in 1..5 %}
      <li data-component="Menu" data-option-mode="hover" class="flex-grow">
        <a data-component="MenuBtn" class="block p-4 text-center bg-gray-200 hover:bg-gray-300" href="#">
          Item #{{ item }}
        </a>
        <div data-component="MenuList"
          data-option-enter-active="transition duration-200 ease-out-expo"
          data-option-leave-active="transition duration-200 ease-out-expo"
          data-option-leave-to="transform scale-y-95 opacity-0 pointer-events-none"
          class="absolute top-full left-0 w-full bg-gray-200 origin-top transform scale-y-95 opacity-0 pointer-events-none">
          <div class="absolute top-0 left-1/3 w-2/3 h-full bg-gray-300"></div>
          <ul class="w-1/3">
            {% for subitem in 1..3 %}
              <li data-component="Menu" data-option-mode="hover">
                <a data-component="MenuBtn" class="block p-4 bg-gray-200 hover:bg-gray-300" href="#">
                  SubItem #{{ item }}.{{ subitem }}
                </a>
                <div data-component="MenuList"
                  data-option-enter-active="transition duration-200 ease-out-expo"
                  data-option-leave-active="transition duration-200 ease-out-expo"
                  data-option-leave-to="opacity-0 pointer-events-none"
                  class="absolute top-0 left-1/3 flex items-center justify-center w-2/3 h-full bg-green-300 opacity-0 pointer-events-none">
                  SubSubItem #{{ item }}.{{ subitem }}.1
                </div>
              </li>
            {% endfor %}
          </ul>
        </div>
      </li>
    {% endfor %}
  </ul>
</nav>
