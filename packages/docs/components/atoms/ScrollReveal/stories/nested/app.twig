<div class="flex items-start justify-center h-96 p-10 opacity-80">
  Scroll down
</div>
<div class="grid gap-10 grid-cols-2 max-w-2xl mx-auto">
  {% for count in 1..10 %}
    <div data-component="ScrollReveal"
      class="-mt-10"
      data-option-repeat
      data-option-enter-from="opacity-0 transform translate-y-full scale-0"
      data-option-enter-active="transition duration-1000 ease-out-expo">
      <div data-ref="target"
        data-component="ScrollReveal"
        data-option-repeat
        class="opacity-0 transform translate-y-full scale-0 overflow-hidden"
        data-option-enter-from="transform scale-150"
        data-option-enter-active="transition duration-1000 ease-out-expo">
        {% include '@ui/atoms/Figure/Figure.twig' with {
          src: 'https://picsum.photos/500/400?rand=1' ~ loop.index,
          width: '500',
          height: '400',
          attr: { data_ref: 'target', class: 'transform scale-150' }
        } %}
      </div>
    </div>
    <div data-component="ScrollReveal"
      data-option-repeat
      data-option-enter-from="opacity-0 transform translate-y-full scale-0"
      data-option-enter-active="transition duration-1000 ease-out-expo">
      <div data-ref="target"
        data-component="ScrollReveal"
        data-option-repeat
        class="opacity-0 transform translate-y-full scale-0 overflow-hidden"
        data-option-enter-from="transform scale-150"
        data-option-enter-active="transition duration-1000 ease-out-expo">
        {% include '@ui/atoms/Figure/Figure.twig' with {
          src: 'https://picsum.photos/500/400?rand=2' ~ loop.index,
          width: '500',
          height: '400',
          attr: { data_ref: 'target', class: 'transform scale-150' }
        } %}
      </div>
    </div>
  {% endfor %}
</div>
<div class="flex items-end justify-center h-96 p-10 opacity-80">
  Scroll down
</div>
