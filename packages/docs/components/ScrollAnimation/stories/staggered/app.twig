{% set total = 4 %}
{% set ease_out_back =  [0.175, 0.885, 0.32, 1.275] %}
{% set ease_in_back = [0.6, -0.28, 0.735, 0.045]  %}
{% set keyframes = [
  { y: [100, 'vh'], scale: 0.5, rotate: 15 },
  { y: 0, scale: 1, easing: ease_out_back },
  { y: [-100, 'vh'], scale: 0.5, rotate: -15, easing: ease_in_back },
] %}

<div class="flex items-center justify-center w-full h-screen">
  ↓ Scroll down
</div>

<div
  data-component="ScrollAnimationParent"
  class="relative w-full h-[500vh]">
  <div class="sticky top-0 flex gap-10 items-center justify-center w-full h-screen">
    {% for index in 1..total %}
      <div
        data-component="ScrollAnimationChild"
        {{
          html_attributes({
            data_option_play_range: [loop.index0, loop.length, 0.02],
            data_option_keyframes: keyframes,
          })
        }}
        class="w-36 h-48 rounded bg-blue-{{ index }}00"></div>
    {% endfor %}
  </div>
</div>

<div class="flex items-center justify-center w-full h-screen">
  ↑ Scroll up
</div>
