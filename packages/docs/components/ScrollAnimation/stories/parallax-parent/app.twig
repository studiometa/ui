<div class="flex items-start justify-center h-96 p-10 opacity-80">
  Scroll down
</div>

{% set img_attr = {
  class: 'object-cover',
  style: { top: '-20%', height: '140%' }
} %}

{% set images = [
  {
    src: 'https://picsum.photos/700/600',
    width: '700',
    height: '600',
    img_attr: img_attr
  },
  {
    src: 'https://picsum.photos/800/600',
    width: '800',
    height: '600',
    img_attr: img_attr
  },
  {
    src: 'https://picsum.photos/600/800',
    width: '600',
    height: '800',
    img_attr: img_attr
  },
  {
    src: 'https://picsum.photos/700/600',
    width: '700',
    height: '600',
    img_attr: img_attr
  },
  {
    src: 'https://picsum.photos/800/600',
    width: '800',
    height: '600',
    img_attr: img_attr
  }
] %}

<div class="max-w-2xl l:max-w-5xl mx-auto" data-component="ParallaxParent">
  {% include '@ui/ImageGrid/ImageGrid.twig' with {
    images: images,
    image_attr: {
      data_component: 'ParallaxChild',
      data_option_from: { y: [-20, '%'] },
      data_option_to: { y: [20, '%'] },
      class: 'h-fit overflow-hidden',
      style: { contain: 'content' }
    }
  } %}
</div>

<div class="flex items-end justify-center h-96 p-10 opacity-80">
  Scroll up
</div>
