{% set items = [
  'Lorem ipsum ego habitur',
  'Dolor sit amet ergo papam',
  'Consectetur irare dies nuna'
] %}

<div class="flex items-center justify-center w-full h-screen">
  Scroll down ↓
</div>

<div
  data-component="ScrollAnimationParent"
  data-option-offset="start start / end end"
  class="w-full h-[600vh]">
  <div class="sticky top-0 grid grid-cols-1 grid-rows-1 items-center w-full h-screen p-20">
    {% for item in items %}
      <div
        data-component="ScrollAnimationChild"
        {{ html_attributes({
          data_option_play_range: [loop.index0 , loop.length, 1 / loop.length],
          data_option_keyframes: [
            { y: 50, opacity: 0 },
            { y: 0, opacity: 1, offset: 0.2, easing: [0.25, 0.46, 0.45, 0.94] },
            { y: 0, opacity: 1, offset: 0.8  },
            { y: -50, opacity: 0, easing: [0.55, 0.085, 0.68, 0.53] },
          ]
        }) }}
        class="grid col-start-1 row-start-1">
        <p class="text-6xl text-center font-bold">{{ item }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<div class="flex items-center justify-center w-full h-screen">
  Scroll up ↑
</div>
