<div class="flex items-start justify-center h-48 p-10 opacity-80">
  Scroll down
</div>

<div class="grid gap-10 grid-cols-2 max-w-2xl mx-auto">
  {% for count in 1..10 %}
    <div data-component="ScrollReveal"
      class="-mt-10 opacity-0 transform translate-y-full scale-50"
      data-option-enter-from="opacity-0 transform translate-y-full scale-50"
      data-option-enter-active="transition duration-1000 ease-out-expo"
      data-option-repeat>
      {% include '@ui/Figure/Figure.twig' with {
        src: 'https://picsum.photos/500/400?rand=1' ~ loop.index,
        width: '500',
        height: '400'
      } %}
    </div>
    <div data-component="ScrollReveal"
      class="opacity-0 transform translate-y-full scale-50"
      data-option-enter-from="opacity-0 transform translate-y-full scale-50"
      data-option-enter-active="transition duration-1000 ease-out-expo"
      data-option-repeat>
      {% include '@ui/Figure/Figure.twig' with {
        src: 'https://picsum.photos/500/400?rand=2' ~ loop.index,
        width: '500',
        height: '400'
      } %}
    </div>
  {% endfor %}
</div>
<div class="h-screen"></div>
<div class="flex items-end justify-center h-48 p-10 opacity-80">
  Scroll up
</div>
