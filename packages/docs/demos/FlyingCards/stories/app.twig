{% set cards = [
  {
    time: '24h',
    offer: 'Basique',
    content: 'Réponse par mail.'
  },
  {
    time: '1h',
    offer: 'Pro',
    content: 'Réponse par mail ou SMS.'
  },
  {
    time: '30m',
    offer: 'Performance',
    content: 'Astreintes, planning réservé'
  },
  {
    time: '15m',
    offer: 'Platine',
    content: 'Même pas le temps de dire ouf.'
  },
  {
    time: '5m',
    offer: 'Ultime',
    content: 'Emballé c\'est pesé'
  },
] %}

<div class="bg-[#CFC7BA] p-20 h-full">
  <h2 class="text-[#575349] text-2xl mb-8 text-center font-bold">Nos offres TMA</h2>
  <div class="relative w-full mb-16 s:mb-0" data-component="Cards">
    {% set card_state = ['card--active', 'card--next', 'card--futur'] %}
    {% for item in cards %}
    {% set card_class = card_state[loop.index0] is defined ? card_state[loop.index0] : '' %}
    <div class="card {{ card_class }} rounded-2xl py-4 px-6 flex items-center space-x-4"
      data-ref="card[]">
      <div class="rounded-2xl bg-black text-[#D2F153] inline-block py-2 px-5 text-center font-sans leading-none">
        <span class="font-bold text-lg">{{ item.time }}</span><br />
        <span class="text-sm items-center space-x-1">
          <span>TRAITÉ</span>
        </span>
      </div>
      <div class="text-lg text-[#575349]">
        <span class="font-bold block">{{ item.offer }}</span>
        <span class="font-light block">{{ item.content }}</span>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

<style>
 .card {
    z-index: 0;
    position: absolute;
    background: linear-gradient(
    315deg,
    rgba(244, 231, 209, 1) 0%,
    rgba(255, 255, 255, 0.500437675070028) 100%
  );
    backdrop-filter: blur(22px);
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transform: translate3d(0, 80px, 0) scale3d(0.8, 0.8, 1);
    transition: opacity 0s cubic-bezier(.215,.61,.355,1),transform 0s cubic-bezier(.215,.61,.355,1), filter 0s cubic-bezier(.215,.61,.355,1);
  }

  .card:first-child {
    position: relative;
  }

  .card--active {
    z-index: 3;
    opacity: 1;
    transform: translateZ(0);
    transition: opacity cubic-bezier(0.215, 0.61, 0.355, 1), transform cubic-bezier(0.215, 0.61, 0.355, 1), filter cubic-bezier(0.215, 0.61, 0.355, 1);
    transition-duration: 0.6s;
  }

  .card--next {
    z-index: 2;
    opacity: 1;
    filter: blur(1px);
    transform: translate3d(0, 35px, 0) scale3d(0.9, 0.9, 1);
    transition-duration: 0.6s;
  }

  .card--futur {
    z-index: 1;
    opacity: 1;
    filter: blur(2px); 
    transform: translate3d(0, 70px, 0) scale3d(0.8, 0.8, 1);
    transition-duration: 0.6s;
  }

  .card--leaving {
    z-index: 4;
    opacity: 0;
    transform: translate3d(0, -35px, 0) scale3d(1.1, 1.1, 1);
    transition: opacity cubic-bezier(0.215, 0.61, 0.355, 1),
      transform cubic-bezier(0.215, 0.61, 0.355, 1);
    transition-duration: 0.6s;
  }
</style>
