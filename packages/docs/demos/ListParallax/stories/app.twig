{% set heights = ['96', '48', '72', '64'] %}
{% set colors = ['red', 'orange', 'amber', 'yellow', 'lime', 'green', 'emerald', 'teal', 'cyan', 'sky', 'blue', 'indigo', 'violet', 'purple', 'fuchsia', 'pink', 'rose'] %}
{% set directions = ['t', 'tr', 'r', 'br', 'b', 'bl', 'l', 'tl'] %}

<div class="flex items-start justify-between gap-24 max-w-4xl mx-auto p-24">
	<div class="flex flex-col gap-24 w-1/2">
		{% for i in 1..10 %}
			{% set from = random(colors) %}
			{% set to = random(colors) %}
			{% set via = random(colors|filter(v => v != from and v != to)) %}
			<div
				data-component="ScrollAnimation"
				{{ html_attributes({
					data_option_from: { y: -160, x: -160 },
					data_option_to: { y: 160, x: 160 },
				}) }}
				class="relative w-full h-{{ random(heights) }} }} rounded overflow-hidden">
				<div
					data-ref="target"
					class="
						absolute -inset-40
						bg-gradient-to-{{ random(directions) }} from-{{ from }}-600 via-{{ via }}-400 to-{{ to }}-200
					"></div>
			</div>
		{% endfor %}
	</div>
	<div data-component="Parallax" class="w-1/2">
		<div data-ref="target" class="flex flex-col gap-24 pt-48">
			{% for i in 1..10 %}
				{% set from = random(colors) %}
				{% set to = random(colors) %}
				{% set via = random(colors|filter(v => v != from and v != to)) %}
				<div
					data-component="ScrollAnimation"
					{{ html_attributes({
						data_option_from: { y: 160, x: 160 },
						data_option_to: { y: -160, x: -160 },
					}) }}
					class="relative w-full h-{{ random(heights) }} }} rounded overflow-hidden">
					<div
						data-ref="target"
						class="
							absolute -inset-40
							bg-gradient-to-{{ random(directions) }} from-{{ from }}-600 via-{{ via }}-400 to-{{ to }}-200
						"></div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
