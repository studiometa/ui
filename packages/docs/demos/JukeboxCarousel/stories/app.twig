{% set logos = [
  'calvinklein.fr',
  'nike.com',
  'adidas.fr',
  'lacoste.com',
  'puma.fr',
  'veja.fr',
  'patagonia.com',
  'lecoqsportif.com',
  'rains.com',
  'flotte.fr',
  'k-way.fr',
  'petit-bateau.fr',
  'vans.fr',
  'levi.com',
  'faguo-store.com',
  'clae.eu'
] %}

{% set col_number = 4 %}

<section class="pb-12 l:pb-32 pt-20">
  <div class="container">
    <div class="flex justify-between items-center max-w-[1450px] mx-auto w-full" data-component="RandomLogo" data-option-total="{{ logos|length - 1 }}">
      {% for item in 0..col_number %}
      <div class="w-[200px] h-[100px] s:h-[200px] relative overflow-hidden" data-component="Logos">
          <div class="absolute top-0 left-0 w-full h-full transition duration-1000" style="transform: translateY(-{{ loop.index0 * 100 }}%);" data-ref="container">
            {% for item in logos %}
            <div class="absolute w-full h-full top-0 transition duration-300 ease-[cubic-bezier(0.215, 0.61, 0.355, 1)]" style="top: {{ loop.index0 * 100 }}%;">
              <div class="absolute top-1/2 left-1/2 -translate--1/2 -translate-y-1/2">
                <img src="https://logo.clearbit.com/{{ logos[loop.index0] }}"
                alt="{{ logos[loop.index0] }}"
                loading="lazy" class="w-full h-full object-contain object-center" />
              </div>
            </div>
            {% endfor %}
          </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>