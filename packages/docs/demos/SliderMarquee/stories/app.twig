<div class="w-screen overflow-hidden">
  <div class="w-full flex">
    <div class="marquee flex shrink-0">
      {% for item in 0..4 %}
        <img class="ml-32"
          alt=""
          src="https://picsum.photos/250/125?random{{ loop.index }}"
          width="250"
          height="125" />
      {% endfor %}
    </div>
    <div class="marquee flex shrink-0">
      {% for item in 0..4 %}
        <img class="ml-32"
          alt=""
          aria-hidden="true"
          src="https://picsum.photos/250/125?random{{ loop.index }}"
          width="250"
          height="125" />
      {% endfor %}
    </div>
  </div>
</div>
